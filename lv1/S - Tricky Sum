#include <bits/stdc++.h>
#include<iomanip>
#include<numeric>
using namespace std;
bool isprime(int x){
  if(x==2)return true;
  else{
    for (int i = 2; i < x; i++)
    {
     if(x%i==0)return false;

    }
    
  }
  return true;
}
 void solve(){
   long long n;
   cin>>n;
   long long sum=(n*(n-1))/2+n;
   long long sum2=0;
   int i=0;
   while(true){
    long long ref=pow(2,i);
    sum2+=ref;
    i++;
    if(ref==n)break;
    else if(ref>n){sum2-=ref;
    break;}
   }
   cout<<sum-2*sum2;
    }
int main(){
  ios::sync_with_stdio(false);
  cin.tie(nullptr);

  int t;
cin >> t;
while(t--){
    solve();
cout<<endl;}

}
