
#include <bits/stdc++.h>
#include<iomanip>
#include<numeric>
using namespace std;
bool isprime(int x){
  if(x==2)return true;
  else{
    for (int i = 2; i < x; i++)
    {
     if(x%i==0)return false;

    }
    
  }
  return true;
}

void solve() {
string s;
cin>>s;
int count=0;
for (int i = 0; i <(s.length()/2); i++)
{
   if(s[i]!=s[s.length()-1-i])count++;
}
if (count == 1 || (count == 0 && s.length() % 2 != 0)) {
    cout << "YES";
} else {
    cout << "NO";
}
}
