
#include <bits/stdc++.h>
#include<iomanip>
#include<numeric>
using namespace std;
bool isprime(int x){
  if(x==2)return true;
  else{
    for (int i = 2; i < x; i++)
    {
     if(x%i==0)return false;

    }
    
  }
  return true;
}

void solve() {
string a;
cin>>a;
for (int i = 0; i < a.length(); i++)
{
    if(a[i]=='q')a[i]='p';
    else if(a[i]=='p')a[i]='q';
}
reverse(a.begin(),a.end());
cout<<a;
}
int main(){
  ios::sync_with_stdio(false);
  cin.tie(nullptr);
   cout.tie(NULL);
  int t;
  cin >> t;
   while(t--){
    solve();
  cout<<endl;}

}
