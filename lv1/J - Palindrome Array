
#include <bits/stdc++.h>
#include<iomanip>
#include<numeric>
using namespace std;
bool isprime(int x){
  if(x==2)return true;
  else{
    for (int i = 2; i < x; i++)
    {
     if(x%i==0)return false;

    }
    
  }
  return true;
}
 void solve(){
int n;
cin>>n;
int arr[100000];
bool flag=1;
for(int i=0;i<n;i++)cin>>arr[i];
for (int i = 0; i < (n/2); i++)
{
    if(arr[i]!=arr[n-1-i]){
      flag=0;
      break;
    }
}
if(flag)cout<<"YES";
else cout<<"NO";
 }
