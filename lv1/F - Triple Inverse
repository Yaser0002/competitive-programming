
#include <bits/stdc++.h>
#include<iomanip>
#include<numeric>
using namespace std;
bool isprime(int x){
  if(x==2)return true;
  else{
    for (int i = 2; i < x; i++)
    {
     if(x%i==0)return false;

    }
    
  }
  return true;
}

void solve() {
string s;
cin>>s;
for (int i = 0; i < s.length(); i++)
{
   if(s[i]>=65 && s[i]<=90)s[i]=(char)tolower(s[i]);
   else if(s[i]>=97)s[i]=(char)toupper(s[i]);
}
reverse(s.begin(),s.end());
for (int i = 0; i < s.length(); i++)
{
   if(s[i]>77 && s[i]<=90)s[i]=(char)(155-s[i]);
   else if(s[i]>=65 && s[i]<=77)s[i]=(char)(155-s[i]);
   else if(s[i]>109 && s[i]<=122)s[i]=(char)(219-s[i]);
   else if(s[i]>=97 && s[i]<=109)s[i]=(char)(219-s[i]); 
}   
cout<<s;
}
int main(){
  ios::sync_with_stdio(false);
  cin.tie(nullptr);
   cout.tie(NULL);
 int t;
  cin >> t;
   while(t--){
    solve();
  cout<<endl;}

}
