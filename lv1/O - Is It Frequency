
#include <bits/stdc++.h>
#include<iomanip>
#include<numeric>
using namespace std;
bool isprime(int x){
  if(x==2)return true;
  else{
    for (int i = 2; i < x; i++)
    {
     if(x%i==0)return false;

    }
    
  }
  return true;
}

void solve() {
int arr[100000];
int n,m;
cin>>n>>m;
for(int i=0;i<n;i++)cin>>arr[i];
int freq[100001];
for (int i = 0; i < n; i++)
{
   freq[arr[i]]++;
}
for (int i = 1; i <= m; i++)
{
   cout<<freq[i]<<"\n";
}



 }
